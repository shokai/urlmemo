!!! XML
%html
  %head
    %title= @title
    %link{:rel => 'stylesheet', :href => "#{app_root}/css/fonts-3.1.1.css", :type => 'text/css'}
    %link{:rel => 'stylesheet', :href => "#{app_root}/css/reset-3.1.1.css", :type => 'text/css'}
    %link{:rel => 'stylesheet', :href => "#{app_root}/css/main.css", :type => 'text/css'}
    %script{:type => 'text/javascript', :src => "#{app_root}/js/jquery.js"}
    %script{:type => 'text/javascript', :src => "#{app_root}/js/util.js"}
    %script{:type => 'text/javascript', :src => "#{app_root}/js/add.js"}
    :javascript
      var app_root = '#{app_root}';
  %body
    %div.container
      %div.head
        %a{:href => app_root}
          %h1= @title
      %div.main
        %div#add
          %h2 Add new Page
          %ul
            %li
              %p
                URL
              %p
                %input{:type => 'text', :id => 'url', :value => @page_url, :size => 40}
            %li
              %p
                TITLE
              %p
                %input{:type => 'text', :id => 'title', :value => @page_title, :size => 40}
            %li
              %p
                %input{:type => 'button', :id => 'btnsave', :value => 'save'}
        %div#bookmarklet
          %h2 bookmarklet
          - @bml = "javascript:location.href='#{app_root}/add?url='+location.href+'&title='+encodeURI(document.title);"
          %ul
            %li
              %p
                drag&drop following link to bookmark bar
              %p
                %a{:href => @bml}
                  [+urlmemo]
            %li
              %p
                or copy
              %p
                %input{:type => 'text', :value => @bml, :size => 30}
